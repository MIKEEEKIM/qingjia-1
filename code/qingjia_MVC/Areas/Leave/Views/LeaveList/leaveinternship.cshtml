@{
    ViewBag.Title = "实习请假";
    var F = @Html.F();
    var LL_ST_Info = (qingjia_MVC.Models.vw_Student)ViewData["LL_ST_Info"];
}

@section script{
    <script>
    function changeInfoClient(event) {
        F.ui.changeInfo.show('@Url.Content("~/UserInfo/UserInfo/Index")', '基本信息修改');
    }
    </script>

}

@section head {

    <style>
        .photo {
            height: 150px;
            line-height: 150px;
            overflow: hidden;
        }

            .photo img {
                height: 150px;
                vertical-align: middle;
            }
    </style>

}

@section body {

    @{
        F.PageManager.AjaxLoadingType(AjaxLoadingType.Mask);
    }

    @(F.Form()
        .BodyPadding(10)
        .AutoScroll(true)
        .ShowHeader(false)
        .ShowBorder(false)
        .ID("SimpleForm1")
        .IsViewPort(true)
        .Toolbars(
            F.Toolbar()
                .ToolbarAlign(ToolbarAlign.Center)
                .Position(ToolbarPosition.Bottom)
                .Items(
                    F.Button()
                        .ID("btnSubmit")
                        .IconFont(IconFont.Save)
                        .ValidateForms("SimpleForm1")
                        .CssClass("marginr")
                        .Text("申请请假")
                        .OnClick(Url.Action("leaveInternship_btnSubmit_Click"), "SimpleForm1")
                )
        )
        .Rows(
            F.FormRow()
                .Items(
                    F.Label()
                        .Text(@LL_ST_Info.ST_Num)
                        .Label("学号")
                        .ID("ST_Num"),
                    F.Label()
                        .Text(@LL_ST_Info.ST_Name)
                        .Label("姓名")
                        .ID("ST_Name")
                ),
            F.FormRow()
                .Items(
                    F.Label()
                        .Text(@LL_ST_Info.ST_Class)
                        .Label("班级")
                        .ID("ST_Class"),
                    F.Label()
                        .Text(@LL_ST_Info.ST_Sex)
                        .Label("性别")
                        .ID("ST_Sex")
                ),
            F.FormRow()
                .Items(
                    F.Label()
                        .Text(@LL_ST_Info.ContactOne + "-" + @LL_ST_Info.OneTel)
                        .Label("联系人一")
                        .ID("contactone"),
                    F.Label()
                        .Text(@LL_ST_Info.ContactTwo + "-" + @LL_ST_Info.TwoTel)
                        .Label("联系人二")
                        .ID("contacttwo")
                ),
            F.FormRow()
                .Items(
                    F.Label()
                        .Text(@LL_ST_Info.ContactThree + "-" + @LL_ST_Info.ThreeTel)
                        .Label("联系人三")
                        .ID("contactthree")
                ),
            F.FormRow()
                .Items(
                    F.Label()
                ),
            F.FormRow()
                .Items(
                    F.TextBox()
                        .Label("实习单位")
                        .EmptyText("")
                        .ID("IntershipCompany")
                        .Required(true)
                        .ShowRedStar(true),
                    F.TextBox()
                        .Label("实习地址")
                        .EmptyText("")
                        .ID("IntershipAddress")
                        .Required(true)
                        .ShowRedStar(true)
                ),
             F.FormRow()
                .Items(
                    F.TextBox()
                        .Label("联系人")
                        .EmptyText("")
                        .ID("PrincipalName")
                        .Required(true)
                        .ShowRedStar(true),
                    F.TextBox()
                        .Label("联系方式")
                        .EmptyText("")
                        .ID("PrincipalTel")
                        .Required(true)
                        .ShowRedStar(true)
                ),
            F.FormRow()
                .Items(
                    F.TextArea()
                        .ID("Note")
                        .EmptyText("请输入实习相关信息。（30字以内）")
                        .Required(true)
                        .Label("实习描述")
                        .AutoGrowHeight(true)
                        .AutoGrowHeightMin(100)
                        .AutoGrowHeightMax(200)
                        .ShowRedStar(true)
                ),
            F.FormRow()
                .Items(
                    F.Label()
                ),
             F.FormRow()
                .Items(
                    F.DatePicker()
                        .Required(true)
                        .EnableEdit(false)
                        .Label("离校日期")
                        .EmptyText("请选择离校日期")
                        .ID("leaveDate")
                        .ShowRedStar(true),
                    F.DatePicker()
                        .Required(true)
                        .EnableEdit(false)
                        .Label("返校日期")
                        .EmptyText("请选择返校日期")
                        .ID("backDate")
                        .ShowRedStar(true)
                ),
            F.FormRow()
                .Items(
                    F.Label()
                ),
            F.FormRow()
                .Items(
                    F.Image()
                        .ID("imgPhoto1")
                        .CssClass("photo")  
                        .ImageUrl(Url.Content("~/res/images/blank.png"))
                        .ShowEmptyLabel(true),
                    F.Image()
                        .ID("imgPhoto2")
                        .CssClass("photo")
                        .ImageUrl(Url.Content("~/res/images/blank.png"))
                        .ShowEmptyLabel(true),
                    F.Image()
                        .ID("imgPhoto3")
                        .CssClass("photo")
                        .ImageUrl(Url.Content("~/res/images/blank.png"))
                        .ShowEmptyLabel(true)
                ),
            F.FormRow()
                .Items(
                    F.FileUpload()
                        .ID("filePhoto1")
                        .ShowRedStar(false)
                        .ShowEmptyLabel(true)
                        .ButtonText("上传实习单位证明材料")
                        .ButtonOnly(true)
                        .Required(false)
                        .ButtonIcon(Icon.ImageAdd)
                        .OnFileSelected(Url.Action("filePhoto_FileSelected1"), "filePhoto1"),
                    F.TextBox()
                        //用于保存图片1url
                        .Label("imgUrl")
                        .EmptyText("")
                        .ID("imgUrl1")
                        .Required(false)
                        .Hidden(true),
                    F.FileUpload()
                        .ID("filePhoto2")
                        .ShowRedStar(false)
                        .ShowEmptyLabel(true)
                        .ButtonText("上传家属同意证明材料")
                        .ButtonOnly(true)
                        .Required(false)
                        .ButtonIcon(Icon.ImageAdd)
                        .OnFileSelected(Url.Action("filePhoto_FileSelected2"), "filePhoto2"),
                    F.TextBox()
                        //用于保存图片2url
                        .Label("imgUrl")
                        .EmptyText("")
                        .ID("imgUrl2")
                        .Required(false)
                        .Hidden(true),
                    F.FileUpload()
                        .ID("filePhoto3")
                        .ShowRedStar(false)
                        .ShowEmptyLabel(true)
                        .ButtonText("上传任课老师同意书")
                        .ButtonOnly(true)
                        .Required(false)
                        .ButtonIcon(Icon.ImageAdd)
                        .OnFileSelected(Url.Action("filePhoto_FileSelected3"), "filePhoto3"),
                    F.TextBox()
                        //用于保存图片3url
                        .Label("imgUrl")
                        .EmptyText("")
                        .ID("imgUrl3")
                        .Required(false)
                        .Hidden(true)
                ),
             F.FormRow()
                .Items(
                    F.Label()
                        .Text("上述三项证明材料，实习单位证明和家属同意证明为必须提交项，任课老师同意书，如请假期间没有相应课程或处于假期，可以不提交")
                        .Label("Note")
                        .ID("Note")
                ),
             F.FormRow()
                .Items(
                    F.Label()
                        .Text("图片较大时，上传会比较慢，请耐心等待；建议先适当压缩图片后再进行上传")
                        .Label("Note")
                        .ID("Note")
                )
        )
    )
    

}