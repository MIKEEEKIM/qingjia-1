                    .Width(170),
                    F.RenderField()
                    .HeaderText("返校时间")
                    .TextAlign(TextAlign.Center)
                    .DataField("TimeBack")
                    .Width(170),
                    F.RenderField()
                    .HeaderText("请假原因")
                    .HeaderTextAlign(TextAlign.Center)
                    .DataField("Reason")
                    .Width(200),
                    F.RenderField()
                    .HeaderText("离校方式")
                    .TextAlign(TextAlign.Center)
