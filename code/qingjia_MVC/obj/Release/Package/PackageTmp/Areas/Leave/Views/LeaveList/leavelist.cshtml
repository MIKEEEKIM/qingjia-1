            .PageSize(20)
            .DataIDField("ID")
            .Toolbars(
                F.Toolbar()
                    .ID("btngroup")
                    .Items(
                        F.Button()
                            .ID("btnTotal")
                            .MarginLeft(60)
                            .MarginRight(10)
                            .OnClick(Url.Action("btnTotal_ReloadData"), new Parameter("fields", "F.ui.gridLeaveList.fields"))
                            .Text("全部请假"),
                        F.ToolbarSeparator()
                            .MarginLeft(10)
                            .MarginRight(10),
                        F.Button()
                            .ID("btnShort")
                            .MarginLeft(10)
                            .MarginRight(10)
                            .OnClick(Url.Action("btnShort_ReloadData"), new Parameter("fields", "F.ui.gridLeaveList.fields"))
                            .Text("短期请假"),
                        F.ToolbarSeparator()
                            .MarginLeft(10)
                            .MarginRight(10),
                        F.Button()
                            .ID("btnLong")
                            .MarginLeft(10)
                            .MarginRight(10)
                            .OnClick(Url.Action("btnLong_ReloadData"), new Parameter("fields", "F.ui.gridLeaveList.fields"))
                            .Text("长期请假"),
                        F.ToolbarSeparator()
                            .MarginLeft(10)
                            .MarginRight(10),
                        F.Button()
