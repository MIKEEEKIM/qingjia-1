                    .Width(100),
                    
                    F.RenderField()
                    .HeaderText("审核人")
                    .TextAlign(TextAlign.Center)
                    .DataField("AuditName")
                    .Width(100)
            )
            .DataSource(ViewBag.leavetable)
        )
 
)
    @(
    F.Window()
        .Hidden(true)
        .Height(900)
        .Width(600)
        .IsModal(true)
        .OnClose(Url.Action("printWindow_Close"))
        .Target(Target.Top)
        .EnableResize(true)
        .EnableMaximize(true)
        .EnableIFrame(true)
        .Title("打印假条")
        .ID("printWindow")
)
}
